# Django / Core
DEBUG=False
SECRET_KEY=replace_me
ALLOWED_HOSTS=localhost,127.0.0.1,api.your-domain.com
CLIENT_URL=https://app.your-domain.com

# Database (Managed Postgres: Railway/Neon/DO/AWS RDS)
DATABASE_URL=postgres://user:password@host:5432/dbname

# CORS / CSRF (set your frontend origins)
CORS_ALLOWED_ORIGINS=https://app.your-domain.com,https://yourproject.vercel.app
CSRF_TRUSTED_ORIGINS=https://app.your-domain.com,https://yourproject.vercel.app

# S3-compatible storage (R2/S3)
USE_S3=True
AWS_ACCESS_KEY_ID=your_key
AWS_SECRET_ACCESS_KEY=your_secret
AWS_STORAGE_BUCKET_NAME=your_bucket
AWS_S3_REGION_NAME=auto
# For R2 set endpoint (example): https://<accountid>.r2.cloudflarestorage.com
AWS_S3_ENDPOINT_URL=
# Optional custom domain (CDN)
AWS_S3_CUSTOM_DOMAIN=
AWS_S3_SIGNATURE_VERSION=s3v4
AWS_S3_ADDRESSING_STYLE=auto
MEDIA_UPLOADS_PREFIX=uploads/

# Email (reset, notifications)
EMAIL_HOST_USER=YOUR_EMAIL@example.com
EMAIL_HOST_PASSWORD=YOUR_EMAIL_PASSWORD
DEFAULT_FROM_EMAIL=SkyTerra <noreply@example.com>
ADMIN_EMAIL=admin@example.com

# Auth / Social
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Redis (optional)
REDIS_URL=

