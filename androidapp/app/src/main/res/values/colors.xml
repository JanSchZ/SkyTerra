<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- SkyTerra Web App Palette -->
    <color name="sky_primary">#58a6ff</color> <!-- Web: primary.main -->
    <color name="sky_primary_light">#7FBFFF</color> <!-- Web: primary.light -->
    <color name="sky_primary_dark">#005DB3</color> <!-- Web: primary.dark -->
    <color name="sky_secondary">#f6d55c</color> <!-- Web: secondary.main -->

    <color name="sky_background">#0d1117</color> <!-- Web: background.default -->
    <color name="sky_surface">#161b22</color> <!-- Web: background.paper / cards -->
    <color name="sky_surface_variant">#30363d</color> <!-- Web: divider, MuiTextField border -->

    <color name="sky_text_primary">#c9d1d9</color> <!-- Web: text.primary -->
    <color name="sky_text_secondary">#8b949e</color> <!-- Web: text.secondary -->
    <color name="sky_text_on_primary">#ffffff</color> <!-- Web: primary.contrastText -->
    <color name="sky_text_on_secondary">#000000</color> <!-- Web: secondary.contrastText -->

    <!-- Standard Material 3 Aliases (Optional, but good for consistency) -->
    <color name="md_theme_primary">@color/sky_primary</color>
    <color name="md_theme_onPrimary">@color/sky_text_on_primary</color>
    <color name="md_theme_primaryContainer">@color/sky_primary_dark</color> <!-- Or a lighter shade if needed for contrast -->
    <color name="md_theme_onPrimaryContainer">@color/sky_primary_light</color>

    <color name="md_theme_secondary">@color/sky_secondary</color>
    <color name="md_theme_onSecondary">@color/sky_text_on_secondary</color>
    <color name="md_theme_secondaryContainer">#f6d55c</color> <!-- Adjust as needed -->
    <color name="md_theme_onSecondaryContainer">#000000</color>

    <color name="md_theme_tertiary">@color/sky_primary_light</color> <!-- Example, can be different -->
    <color name="md_theme_onTertiary">@color/sky_text_on_primary</color>
    <color name="md_theme_tertiaryContainer">#005DB3</color>
    <color name="md_theme_onTertiaryContainer">@color/sky_primary_light</color>

    <color name="md_theme_error">#FFB4AB</color>
    <color name="md_theme_onError">#690005</color>
    <color name="md_theme_errorContainer">#93000A</color>
    <color name="md_theme_onErrorContainer">#FFDAD6</color>

    <color name="md_theme_background">@color/sky_background</color>
    <color name="md_theme_onBackground">@color/sky_text_primary</color>

    <color name="md_theme_surface">@color/sky_surface</color>
    <color name="md_theme_onSurface">@color/sky_text_primary</color>

    <color name="md_theme_surfaceVariant">@color/sky_surface_variant</color>
    <color name="md_theme_onSurfaceVariant">@color/sky_text_secondary</color>

    <color name="md_theme_outline">@color/sky_surface_variant</color> <!-- For borders, dividers -->
    <color name="md_theme_inverseSurface">@color/sky_text_primary</color>
    <color name="md_theme_inverseOnSurface">@color/sky_background</color>
    <color name="md_theme_inversePrimary">@color/sky_primary_dark</color>
    <color name="md_theme_surfaceTint">@color/sky_primary</color> <!-- Typically same as primary -->
</resources>
