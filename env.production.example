# SkyTerra Production Environment Configuration
# Copiar a .env.production y configurar valores reales

# Default production stack: Railway (API + Postgres), Vercel (Web), Cloudflare R2 (media)
# ------------------------------------------------------------------
# Django Core Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-here-minimum-50-characters-random
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CLIENT_URL=https://your-domain.com

# ------------------------------------------------------------------
# Database (Railway managed Postgres)
DATABASE_URL=postgresql://username:password@railway-production-host:5432/skyterra

# ------------------------------------------------------------------
# Cache (Railway or Upstash Redis recommended)
REDIS_URL=redis://default:password@railway-redis-host:6379/0

# ------------------------------------------------------------------
# CORS & CSRF Configuration
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ------------------------------------------------------------------
# Cloudflare R2 / S3-compatible storage
USE_S3=True
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=skyterra-r2-bucket
AWS_S3_REGION_NAME=auto
AWS_S3_ENDPOINT_URL=https://<accountid>.r2.cloudflarestorage.com
AWS_S3_CUSTOM_DOMAIN=
AWS_S3_SIGNATURE_VERSION=s3v4
AWS_S3_ADDRESSING_STYLE=auto
MEDIA_UPLOADS_PREFIX=media/

# ------------------------------------------------------------------
# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_live_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret

# ------------------------------------------------------------------
# Coinbase Commerce (Bitcoin)
COINBASE_COMMERCE_API_KEY=your-live-coinbase-commerce-api-key
COINBASE_COMMERCE_WEBHOOK_SECRET=your-coinbase-webhook-secret
COINBASE_COMMERCE_DEFAULT_CURRENCY=USD

# ------------------------------------------------------------------
# External APIs
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key

# ------------------------------------------------------------------
# Google OAuth (OAuth client credentials for production)
# Set these with values from Google Cloud Console for your production client
GOOGLE_CLIENT_ID=your_production_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_production_google_client_secret

# ------------------------------------------------------------------
# Email Configuration (AWS SES recomendado)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-ses-smtp-username
EMAIL_HOST_PASSWORD=your-ses-smtp-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com
SERVER_EMAIL=server@your-domain.com

# ------------------------------------------------------------------
# Monitoring & Logging (Opcional - Sentry recomendado)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ------------------------------------------------------------------
# Security Headers (Nginx tambien debe configurar estos)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ------------------------------------------------------------------
# Admin & Staff Settings
ADMIN_EMAIL=admin@your-domain.com
STAFF_NOTIFICATIONS_EMAIL=staff@your-domain.com
