# SkyTerra Production Environment Configuration
# Copiar a .env.production y configurar valores reales

# Default production stack: Railway (API + Postgres), Vercel (Web), Cloudflare R2 (media)
# ------------------------------------------------------------------
# Django Core Settings
DEBUG=False
SECRET_KEY=
ALLOWED_HOSTS="skyterra-production.up.railway.app,skyterra.cl,www.skyterra.cl"
CLIENT_URL="https://v0-sky-terra.vercel.app,https://skyterra.cl"

# ------------------------------------------------------------------
# Database (Railway managed Postgres)
DATABASE_URL="${{Postgres.DATABASE_URL}}"
DB_SSL_REQUIRE="True"

# ------------------------------------------------------------------
# Cache (Railway or Upstash Redis recommended)
REDIS_URL=

# ------------------------------------------------------------------
# CORS & CSRF Configuration
CORS_ALLOWED_ORIGINS="https://v0-sky-terra.vercel.app,https://www.skyterra.cl,https://skyterra.cl"
CSRF_TRUSTED_ORIGINS="https://v0-sky-terra.vercel.app,https://www.skyterra.cl,https://skyterra.cl"

# ------------------------------------------------------------------
# Cloudflare R2 / S3-compatible storage
USE_S3=True
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME="skyterra-v1-media"
AWS_S3_REGION_NAME="auto"
AWS_S3_ENDPOINT_URL=
AWS_S3_CUSTOM_DOMAIN=
AWS_S3_SIGNATURE_VERSION="s3v4"
AWS_S3_ADDRESSING_STYLE="path"
MEDIA_UPLOADS_PREFIX="uploads/"

# ------------------------------------------------------------------
# Stripe Configuration
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# ------------------------------------------------------------------
# Coinbase Commerce (Bitcoin)
COINBASE_COMMERCE_API_KEY=
COINBASE_COMMERCE_WEBHOOK_SECRET=
COINBASE_COMMERCE_DEFAULT_CURRENCY=USD

# ------------------------------------------------------------------
# External APIs
GOOGLE_GEMINI_API_KEY=

# ------------------------------------------------------------------
# OAuth Social (production credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# ------------------------------------------------------------------
# Email Configuration (AWS SES recomendado)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL="noreply@skyterra.cl"
SERVER_EMAIL="server@skyterra.cl"

# ------------------------------------------------------------------
# Monitoring & Logging (Opcional - Sentry recomendado)
SENTRY_DSN=

# ------------------------------------------------------------------
# Security Headers (Nginx tambien debe configurar estos)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ------------------------------------------------------------------
# Admin & Staff Settings
ADMIN_USERNAME=admin
ADMIN_EMAIL=skyedits.cl@gmail.com
# Para entornos donde no auto-bootstrapeas el admin, ejecuta `python manage.py createsuperuser`
ADMIN_PASSWORD=
STAFF_NOTIFICATIONS_EMAIL=

# Automatically run migrations/static collect and bootstrap the admin user on container start
SKYTERRA_RUN_MIGRATIONS=1
SKYTERRA_COLLECTSTATIC=1
CREATE_ADMIN_ON_STARTUP=1
