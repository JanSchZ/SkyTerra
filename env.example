# SkyTerra  Root env.example
# Copy this file to `.env` in the project root and fill in actual values.
# Si deseas separar secretos por servicio, revisa tambien:
# Default stack: Railway backend + Postgres, Vercel frontend, Cloudflare R2 media storage
#  - services/api/.env.example (backend Django)
#  - apps/web/env.example (frontend Vite)
#  - apps/operator-mobile/.env.example (Expo)

# ----------------------------------------------------------------------------------
# Django / Backend configuration (Railway backend by default)
SECRET_KEY=your_django_secret_key_here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Stripe (Backend)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Coinbase Commerce (Bitcoin)
COINBASE_COMMERCE_API_KEY=your_coinbase_commerce_api_key
COINBASE_COMMERCE_WEBHOOK_SECRET=your_coinbase_commerce_webhook_shared_secret
COINBASE_COMMERCE_DEFAULT_CURRENCY=USD

# Bitcoin payments via Coinbase Commerce (empresa con compliance establecido)

# External APIs
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key_here

# Client URL (frontend base URL used for redirects)
CLIENT_URL=http://localhost:3000

# Database (Railway managed Postgres recommended)
DATABASE_URL=postgres://user:password@host:5432/dbname
DB_SSL_REQUIRE=True

# Cloudflare R2 / S3-compatible storage (required if USE_S3=True)
# R2 endpoint example: https://<accountid>.r2.cloudflarestorage.com
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=auto
AWS_S3_ENDPOINT_URL=https://<accountid>.r2.cloudflarestorage.com
AWS_S3_CUSTOM_DOMAIN=
AWS_S3_SIGNATURE_VERSION=s3v4
AWS_S3_ADDRESSING_STYLE=auto
MEDIA_UPLOADS_PREFIX=uploads/

# ----------------------------------------------------------------------------------
# Frontend / Vite variables (exposed to the browser)
VITE_API_BASE_URL=http://localhost:8000/api
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# ----------------------------------------------------------------------------------
# Notes:
# 1. Never commit your real .env to version control.
# 2. Rotate sensitive keys regularly.
# 3. For local Stripe webhook testing, run:
#    stripe listen --forward-to localhost:8000/api/payments/webhook/
#    and copy the generated STRIPE_WEBHOOK_SECRET value above. 
